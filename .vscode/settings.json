{
    "Lua.diagnostics.globals": [
        "display",
        "transition",
        "easing",
        "graphics",
        "Runtime",
        "system",
        "timer"
    ],
    "Lua.diagnostics.disable": [
        "trailing-space"
    ],
    // "Lua.diagnostics.disable": [
    //     "undefined-global"
    // ]

    "runOnSave.statusMessageTimeout": 3000,
    "runOnSave.commands": [
        {
            // Assemble the assets:
            // - sprites.json file in the assets/sprites directory
            "match": ".*\\.lua$",
            "command": "python ${workspaceFolder}\\assets.py",
            "runningStatusMessage": "Assembling assets...",
            "finishStatusMessage": "Assets assembled."
        },
    ],

    "code-runner.showTerminal": false,
    "code-runner.executorMapByGlob": {
        "*.lua": "python H:\\Scripts\\send_window_message.py"
    },

}